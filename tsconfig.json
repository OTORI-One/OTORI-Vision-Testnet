{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./ovt-fund",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "ovt-fund/**/*.ts",
    "ovt-fund/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "ovt-program"
  ]
} 